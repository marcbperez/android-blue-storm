<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#000000">

  <SeekBar
    android:id="@+id/rainSeekBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/textView2"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:alpha=".6"
    android:background="#222222" />

  <SeekBar
    android:id="@+id/windSeekBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/textView3"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:alpha=".6"
    android:background="#222222" />

  <TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/rainSeekBar"
    android:layout_centerHorizontal="true"
    android:alpha=".6"
    android:text="@string/rain"
    android:textColor="#FFFFFF" />

  <TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/windSeekBar"
    android:layout_centerHorizontal="true"
    android:alpha=".6"
    android:text="@string/wind"
    android:textColor="#FFFFFF" />

  <TextView
    android:id="@+id/textView3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/thunderSeekBar"
    android:layout_centerHorizontal="true"
    android:alpha=".6"
    android:text="@string/thunder"
    android:textColor="#FFFFFF" />

  <SeekBar
    android:id="@+id/thunderSeekBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:alpha=".6"
    android:background="#222222" />

  <ImageButton
    android:id="@+id/playButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignLeft="@+id/textView3"
    android:layout_alignParentTop="true"
    android:layout_alignStart="@+id/textView3"
    android:layout_marginTop="57dp"
    android:alpha=".6"
    android:background="#3F51B5"
    android:contentDescription="@string/toggle"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    app:srcCompat="@android:drawable/ic_lock_silent_mode_off" />
</RelativeLayout>
